<%- include('../partials/head') %>
<title>Add Classification</title>
</head>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/nav') %>

  <main>
    <h1>Add New Classification</h1>

    <% if (messages.notice) { %><p class="notice"><%= messages.notice %></p><% } %>
    <% if (messages.error) { %><p class="error"><%= messages.error %></p><% } %>

    <form action="/inv/add-classification" method="post" id="addClassificationForm">
      <label for="classification_name">Classification Name:</label>
      <input type="text" name="classification_name" id="classification_name" required
             pattern="[A-Za-z0-9]+" title="No spaces or special characters allowed">

      <p><small>Cannot contain spaces or special characters.</small></p>

      <button type="submit">Add Classification</button>
    </form>
  </main>

  <%- include('../partials/footer') %>
</body>