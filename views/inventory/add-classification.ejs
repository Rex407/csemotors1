<% if (title) { %>
<section class="form-card">
  <h1><%= title %></h1>

  <%- messages ()%>

  <% if (errors) { %>
    <ul class="error">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <p>Field is required.</p>

  <form action="/inv/addClassification" method="post">
    <label for="carClassification">Classification Name</label>
    <p>Name must be alphabetic characters only.</p>

    <input
      type="text"
      name="classification_name"
      id="carClassification"
      required
      pattern="[A-Za-z]+"
      value="<%= locals.classification_name || '' %>"
    >

    <button type="submit">Add Classification</button>
  </form>
</section>
<% } else { res.redirect('/') } %>
