<% if (title) { %>
<section class="form-card inventory-card">
  <h1><%= title %></h1>

  <%- messages %>

  <% if (errors) { %>
    <ul class="error">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>

  <p>All fields are required.</p>

  <form action="/inv/addInventory" method="post">
    <label>Classification</label>
    <%- classificationSelect %>

    <label>Make</label>
    <input type="text" name="inv_make" required minlength="3"
      value="<%= locals.inv_make || '' %>">

    <label>Model</label>
    <input type="text" name="inv_model" required minlength="3"
      value="<%= locals.inv_model || '' %>">

    <label>Description</label>
    <textarea name="inv_description" required><%= locals.inv_description || '' %></textarea>

    <label>Image Path</label>
    <input type="text" name="inv_image"
      value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>">

    <label>Thumbnail Path</label>
    <input type="text" name="inv_thumbnail"
      value="<%= locals.inv_thumbnail || '/images/vehicles/no-image.png' %>">

    <label>Price</label>
    <input type="text" name="inv_price" required
      value="<%= locals.inv_price || '' %>">

    <label>Year</label>
    <input type="text" name="inv_year" required
      value="<%= locals.inv_year || '' %>">

    <label>Miles</label>
    <input type="text" name="inv_miles" required
      value="<%= locals.inv_miles || '' %>">

    <label>Color</label>
    <input type="text" name="inv_color" required
      value="<%= locals.inv_color || '' %>">

    <button type="submit">Add Vehicle</button>
  </form>
</section>
<% } else { res.redirect('/') } %>
