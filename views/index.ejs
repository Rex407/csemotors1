    <h2>MY ACCOUNT</h2>
</div>

<!-- Welcome section -->
<section class="welcome">
    <h1>Welcome to CSE Motors!</h1>
</section>

<!-- Featured Vehicle Section -->
<section class="featured-vehicle">
    <div class="vehicle-details">
        <h2 class="vehicle-title">DMC Delorean</h2>
        <div class="vehicle-description">
            3 Cup holders<br>
            Superman doors<br>
            Fuzzy dice!
        </div>
        <button class="cta-button">Own Today</button>
    </div>
    <div class="vehicle-image">
        <img src="/images/vehicles/delorean.jpg" alt="DMC Delorean">
    </div>
</section>

<!-- Upgrades Section -->
<section class="upgrades">
    <h2>Delorean Upgrades</h2>
    <div class="upgrade-items">
        <div class="upgrade-item">
            <div class="upgrade-image">
                <img src="/images/upgrades/flux-cap.png" alt="Flux Capacitor">
            </div>
            <div class="upgrade-details">
                <h3>Flux Capacitor</h3>
                <p>A red and black cylindrical object with a lightning bolt symbol on it.</p>
            </div>
        </div>
        
        <div class="upgrade-item">
            <div class="upgrade-image">
                <img src="/images/upgrades/flame.jpg" alt="Flame Decals">
            </div>
            <div class="upgrade-details">
                <h3>Flame Decals</h3>
                <p>A flame design in red and yellow.</p>
            </div>
        </div>
        
        <div class="upgrade-item">
            <div class="upgrade-image">
                <img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers">
            </div>
            <div class="upgrade-details">
                <h3>Bumper Stickers</h3>
                <p>A sticker with the text "BUMPS" written in white on a blue background.</p>
            </div>
        </div>
        
        <div class="upgrade-item">
            <div class="upgrade-image">
                <img src="/images/upgrades/hub-cap.jpg" alt="Hub Caps">
            </div>
            <div class="upgrade-details">
                <h3>Hub Caps</h3>
                <p>A circular object with multiple holes around its edge, resembling a hubcap.</p>
            </div>
        </div>
    </div>
</section>

