<h1>Add New Vehicle</h1>

<!-- Flash Messages -->
<% if (messages().length > 0) { %>
  <div id="flash-messages">
    <%- messages() %>
  </div>
<% } %>

<% if (typeof errors !== 'undefined' && errors.length > 0) { %>
  <div class="error-list">
    <ul>
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>


<form action="/inv/add-inventory" method="post" id="add-inventory-form">
  <label for="inv_make">Make</label>
  <input type="text" id="inv_make" name="inv_make" value="<%= inv_make || '' %>" required>

  <label for="inv_model">Model</label>
  <input type="text" id="inv_model" name="inv_model" value="<%= inv_model || '' %>" required>

  <label for="inv_year">Year</label>
  <input type="number" id="inv_year" name="inv_year" value="<%= inv_year || '' %>" required pattern="\\d{4}" title="Enter a 4-digit year">

  <label for="inv_price">Price</label>
  <input type="number" id="inv_price" name="inv_price" value="<%= inv_price || '' %>" required step="0.01">

  <label for="inv_miles">Miles</label>
  <input type="number" id="inv_miles" name="inv_miles" value="<%= inv_miles || '' %>" required>

  <label for="inv_color">Color</label>
  <input type="text" id="inv_color" name="inv_color" value="<%= inv_color || '' %>" required>

  <label for="inv_description">Description</label>
  <textarea id="inv_description" name="inv_description" required><%= inv_description || '' %></textarea>

  <label for="classification_id">Classification</label>
  <%- classificationSelect %> <!-- dynamically built dropdown -->

  <label for="inv_image">Image Path</label>
  <input type="text" id="inv_image" name="inv_image" value="<%= inv_image || '/images/no-image.png' %>" required>

  <label for="inv_thumbnail">Thumbnail Path</label>
  <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail || '/images/no-image-tn.png' %>" required>

  <button type="submit">Add Vehicle</button>
</form>
